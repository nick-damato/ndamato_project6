<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SixthFragment"
    android:background="@drawable/huntress_background">

    <ScrollView
        android:layout_width="600dp"
        android:layout_height="350dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="900dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/huntress_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huntress_title"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:contentDescription="@string/huntress_model"
                    android:src="@drawable/huntress_model" />

                <TextView
                    android:id="@+id/spacer"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/huntress_unlock_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huntress_unlock_title"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Huntress_unlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huntress_unlock"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/spacer2"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/spacer3"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/huntress_health_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huntress_health_title"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/huntress_health"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huntress_health"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/huntress_health_regen_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huntress_health_regen_title"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/huntress_health_regen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huntress_health_regen"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/huntress_damage_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huntress_damage_title"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/huntress_damage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huntress_damage"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/huntress_armor_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huntress_armor_title"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/huntress_armor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huntress_armor"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/spacer4"
                    android:layout_width="100dp"
                    android:layout_height="157dp" />

                <TextView
                    android:id="@+id/huntress_gameplay_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huntress_gameplay_title"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/huntess_gameplay_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:text="@string/huntress_gameplay_link"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>